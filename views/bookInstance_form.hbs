<h1>{{title}}</h1>
<form action="" method="POST">
  <div class="form-group">
    <label for="book">Book:</label>
    <select name="book" id="book" class="form-control" required>
      <option selected hidden disabled>Select book</option>
      {{#each books}}
        {{#if ../bookInstance}}
        <option value={{this._id}} {{check_book_instance ../bookInstance this}} id={{this.title}}>{{this.title}}</option>
        {{else}}
        <option value={{this._id}} id={{this.title}}>{{this.title}}</option>
        {{/if}}
      {{/each}}
    </select>
  </div>
  <div class="form-group">
    <label for="imprint">Imprint:</label>
    <input type="text" id="imprint" class="form-control" placeholder="Publisher and date information" name="imprint" required value="{{check_bookInstance_imprint bookInstance}}">
  </div>
  <div class="form-group">
    <label for="due_back">Date when book available:</label>
    <input type="date" class="form-control" id="due_back" name="due_back" value="{{check_bookInstance_due_back bookInstance}}">
  </div>
  <div class="form-group">
    <label for="status">Status:</label>
    <select name="status" id="status" class="form-control" required>
      <option disabled hidden selected>Select status</option>
      <option value="Maintenance" {{check_bookInstance_status bookInstance 'Maintenance'}}>Maintenance</option>
      <option value="Available" {{check_bookInstance_status bookInstance 'Available'}}>Available</option>
      <option value="Loaned" {{check_bookInstance_status bookInstance 'Loaned'}}>Loaned</option>
      <option value="Reserved" {{check_bookInstance_status bookInstance 'Reserved'}}>Reserved</option>
    </select>
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>
  {{#if errors}}
  <ul>
  {{#each errors}}
    <li>{{this.msg}}</li>

  {{/each}}
  </ul>
  {{/if}}
</form>
<h1>{{ title }}</h1>

<form action="" method="POST">
	<div class="form-group">
		<label for="name">Genre:</label>
		<input id="name" class="form-control" type="text" placeholder="Fantasy,	Poetry, etc." name="name" value="{{genre_exists genre}}"></input>
		<button class="btn btn-primary" type="submit">Submit</button>
	</div>
</form>

{{#if errors }}
<ul>
	{{#each errors}}
	<li>{{ this.msg }}</li>
	{{/each}}
</ul>
{{/if}}

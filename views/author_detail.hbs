<h1>Author: {{author.name}}</h1>

<p> {{author.lifespan}} </p>

<div style='margin-left:20px;margin-top:20px;'>
  <h4>Books</h4>
  {{#if author_books}}
  <dl>
    {{#each author_books}}
      <dt>
        <a href={{this.url}}>{{this.title}}</a>
      </dt>
      <dd>{{this.summary}}</dd>
    {{/each}}
  </dl>
  {{else}}
  <p>Books not found</p>
  {{/if}}
</div>
<hr>
<p><a href={{delete_page author.url}}>Delete author</a></p>
<p><a href={{update_page author.url}}>Update author</a></p>